pipeline {

  agent any
  
  environment {

        ANYPOINT_CREDENTIALS = credentials('anypoint.credentials')

      }
	tools {
		maven 'default'
	}

  stages {
	stage('Build'){
		steps {
			sh 'mvn clean verify compile'
		}
	}

    stage('Unit Test') {

      steps {

        sh 'mvn clean test'

      }

    }

    stage('Deploy CloudHub') {

      steps {
	    sh 'mvn package'
        sh 'mvn deploy -P cloudhub -Dmule.version=4.2.0 -Danypoint.username=${ANYPOINT_CREDENTIALS_USR} -Danypoint.password=${ANYPOINT_CREDENTIALS_PSW}'
      }

    }

  }
}
